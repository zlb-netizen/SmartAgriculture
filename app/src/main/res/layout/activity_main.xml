<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <RadioGroup
        android:id="@+id/mian_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:background="#E5EDDC"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        >
        <RadioButton
            android:id="@+id/main_button_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/first"
            android:text="首页"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textColor="@drawable/main_rbtext"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/main_button_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@drawable/main_rbtext"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/control"
            android:text="控制"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/main_button_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@drawable/main_rbtext"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/test"
            android:text="检测"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/main_button_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/me"
            android:text="我的"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:textColor="@drawable/main_rbtext"
            android:textSize="12sp"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/main_layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/mian_button"/>
</RelativeLayout>