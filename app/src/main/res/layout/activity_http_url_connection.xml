<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@mipmap/city"
    tools:context=".Activity.HttpUrlConnectionActivity">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <EditText
           android:id="@+id/ed_input"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="请输入城市"
           />
       <Button
           android:id="@+id/btn_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/frag_bg"
           android:layout_toRightOf="@id/ed_input"
           android:text="查询"
           />
   </RelativeLayout>
    <LinearLayout
        android:id="@+id/frag_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/frag_tv_currenttemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
                android:text="3℃"
                android:textSize="66sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/frag_tv_city"
                style="@style/todaytext"
                android:text="北京"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/frag_tv_currenttemp"/>
            <TextView
                android:id="@+id/frag_tv_condition"
                style="@style/todaytext"
                android:text="晴"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/frag_tv_city"/>
            <TextView
                android:id="@+id/frag_tv_date"
                android:text="2019-11-05"
                android:layout_below="@id/frag_tv_condition"
                android:layout_marginTop="20dp"
                style="@style/todaytext" />
            <TextView
                android:id="@+id/frag_tv_wind"
                style="@style/todaytext"
                android:layout_below="@id/frag_tv_date"
                android:layout_marginTop="5dp"
                android:text="东北风3~4级"/>
            <TextView
                android:id="@+id/frag_tv_line1"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/frag_tv_wind"
                android:background="#000000"
                android:layout_alignBottom="@id/frag_tv_wind"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/frag_tv_temprange"
                style="@style/todaytext"
                android:text="9~-1℃"
                android:layout_toRightOf="@id/frag_tv_line1"
                android:layout_alignBottom="@id/frag_tv_wind"/>

        </RelativeLayout>
        <!-- 用于显示未来三天的天气情况-->
        <LinearLayout
            android:id="@+id/frag_center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/frag_bg"
            >
                 <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/item_center_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-11-18"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/item_center_tv_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/item_center_tv_date"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/item_center_tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:text="12\/20℃"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/item_center_iv"
                    android:layout_toLeftOf="@id/item_center_tv_temp"
                    android:layout_marginRight="10dp"
                    android:text="持续无风向"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_below="@id/item_center_tv_date"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/item_center_tv_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-11-19"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/item_center_tv_con2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/item_center_tv_date2"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/item_center_tv_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:text="12\/20℃"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/item_center_iv2"
                    android:layout_toLeftOf="@id/item_center_tv_temp2"
                    android:layout_marginRight="10dp"
                    android:text="持续无风向"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_below="@id/item_center_tv_date2"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/item_center_tv_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-11-20"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/item_center_tv_con3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小雨"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/item_center_tv_date3"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/item_center_tv_temp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:text="12\/20℃"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/item_center_iv3"
                    android:layout_toLeftOf="@id/item_center_tv_temp3"
                    android:layout_marginRight="10dp"
                    android:text="持续无风向"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_below="@id/item_center_tv_date3"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/item_center_tv_date4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-11-21"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/item_center_tv_con4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云转阴"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/item_center_tv_date4"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/item_center_tv_temp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:text="12\/20℃"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/item_center_iv4"
                    android:layout_toLeftOf="@id/item_center_tv_temp4"
                    android:layout_marginRight="10dp"
                    android:text="持续无风向"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_below="@id/item_center_tv_date4"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>


        </LinearLayout>
        <!-- 用于表示指数信息的线性布局-->

    </LinearLayout>




    </LinearLayout>


